{
  "extends": [
    "airbnb",
    "prettier",
    "react-app"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "env": {
    "browser": true,
    "jest": true
  },
  "plugins": [
    "react",
    "jsx-a11y",
    "import",
    "prettier"
  ],
  "rules": {
    "no-nested-ternary" : 0,
    "react/prefer-stateless-function": 0,
    "react/prop-types": [
      0
    ],
    "no-console": "off",
    "react/jsx-filename-extension": "off",
    "react/self-closing-comp": 0,
    "no-param-reassign": [
      2,
      {
        "props": false
      }
    ],
    "jsx-a11y/anchor-is-valid": [
      "error",
      {
        "components": [
          "Link"
        ],
        "specialLink": [
          "to"
        ]
      }
    ],
    "prettier/prettier": [
      "error",
      {
        "trailingComma": "all",
        "singleQuote": true,
        "printWidth": 125
      }
    ]
  }
}
